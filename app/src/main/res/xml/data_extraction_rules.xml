<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!--
        Data extraction rules for Android 12+ (API 31+)
        https://developer.android.com/about/versions/12/backup-restore
    -->
    
    <cloud-backup>
        <!-- Include all app data in cloud backups by default -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data from cloud backups -->
        <!-- Add exclusions here if needed in the future -->
        <!-- Example: <exclude domain="sharedpref" path="sensitive_prefs.xml" /> -->
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all app data in device-to-device transfers by default -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data from device transfers -->
        <!-- Add exclusions here if needed in the future -->
    </device-transfer>
</data-extraction-rules>
